{
    "compilerOptions": {
        "target": "ES2020",
        "strict": true,
        "outDir": "dist",
        "module": "commonjs",
        "rootDir": "../../",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": false
    },
    "include": ["../../common/src/**/*", "src/**/*"],
    "exclude": ["node_modules", "src/**/*.spec.ts"],
    "references": [
      {
        "path": "../../common"
      }
    ]
}